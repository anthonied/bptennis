@model BPTennis.MVC.Models.SearchModel

@{
    ViewBag.Title = "Index";
}

<script>

    function Search(date) {

        if (date == '') {
            alert("Please enter a date!")
        }
        else {
            document.location.href = "Search/SearchResults?date=" + date;
        }
    }

</script>

<h2>Index</h2>

<table>
    <tr>
        <th style="width:150px;">
            Please Specify Date: 
        </th>
        <td>
            <input id="date" type="text" style="width:200px;" />
        </td>
    </tr>
    <tr>
        <td>
            <input type="button" style="width:150px; height:100px;" value="Search" onclick="Search(document.getElementById('date').value.toString('yyyy-MM-dd'))" />
        </td>        
    </tr>
</table>

