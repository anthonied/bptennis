@model IEnumerable<BPTennis.MVC.Models.SearchModel>

@{
    ViewBag.Title = "Index";
}

<script>

    function Search(clickedButton) {
        date = clickedButton.id.toString().replace('button', '');
        document.location.href = "Search/SearchResults?date=" + date;
    }

</script>

<h2>Index</h2>

<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <input type="button" id="@string.Format("button{0}",item.Date)" value="@item.Date.ToLongDateString()" onclick="Search(this)" />
        </td>        
    </tr>
}

</table>
